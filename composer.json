{
    "name": "elnadrion/tools.twig",
    "description": "Модуль подключения шаблонизатора twig к битриксу",
    "keywords": [
        "bitrix",
        "1С Битрикс",
        "twig",
        "шаблонизатор"
    ],
    "license": "MIT",
    "support": {
        "source": "https://github.com/elnadrion/tools.twig.git"
    },
    "require": {
        "php": "^8.1",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "rector/rector": "^1.0",
        "symfony/var-dumper": "^5.0|^6.0|^7.0",
        "symplify/easy-coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Elnadrion\\": "src/Elnadrion/",
            "Elnadrion\\Tools\\Twig\\Test\\": "tests/"
        },
        "files": [
            "src/Elnadrion/functions.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
